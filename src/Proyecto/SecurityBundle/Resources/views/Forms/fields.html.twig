{% block form_row %}
{% spaceless %}
    <div class="form-group">
        <span class="bg-warning">{{ form_errors(form) }}</span>
        {{ form_label(form , null, { 'label_attr': {'class': '' } }) }}
        
        <div class="controls">
            {{ form_widget(form, {'attr' : {'class' : 'form-control'} })}}
        </div>
    </div>
{% endspaceless %}
{% endblock form_row %}