{% extends "::base.html.twig" %}
{% block title %}Perfil {% endblock %}
{% block body %}
<script type="text/javascript" src="{{asset('js/jquery.quicksearch.js')}}"></script>
<script type="text/javascript">
    $(function () {
        $('input#busqueda').quicksearch('table tbody tr',{
            'noResults':  '#noResults'
        });
        
        
    });
</script>
<h3>Lista de alumnos asignados</h3>
<div class="">    
    <input class="form-control" type="text"  placeholder="Buscar" id="busqueda">
</div>
<br/>
<div class="contenedorTabla">
    <table class="table table-striped table-bordered table-condensed table-responsive ">
        <thead>
            <tr class="info"><th>Usuario</th><th>Nombre Alumno</th><th class="text-center"><span class="glyphicon glyphicon-pencil"></span></th><th class="text-center"><span class="glyphicon glyphicon-remove"></span></th></tr>
        </thead>
        <tbody>
        <tr id="noResults"><td>No hay resultados</td></tr>
        
    {% for alumno in listaAlumnos %}
        <tr id="{{ alumno.nombre }}">
            <td>{{ alumno.usuario }}</td>
            <td>{{ alumno.nombre }}</td>
            <td class="col-md-1"><a href="{{ path('editar_alumno', { 'idAlumno' : alumno.Id}) }}" title="Editar" class="editar btn btn-small"><span class="glyphicon glyphicon-pencil"></span></a></td>
            <td class="col-md-1"><a href="{{ path('eliminar_alumno', { 'idAlumno' : alumno.Id}) }}" title="Eliminar" class="eliminar btn btn-small"><span class="glyphicon glyphicon-remove"></span></a></td>
        </tr>
    {% else %}
        <tr><td>No tienes alumnos asignados</td></tr>
    {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
{% block menu %}
    <ul class="nav nav-pills nav-stacked">
         <li class="nav-header">Menu Principal</li>
         <li><a href="{{path('alta_concepto')}}">Crear Concepto</a></li>
        <li><a href="{{path('alta_actividad')}}">Crear Actividad</a></li>        
        <li><a href="{{path('alta_alumno')}}">Crear Alumno</a></li>
    </ul>
{% endblock %}
