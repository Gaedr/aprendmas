<script type="text/javascript" src="{{asset('js/jquery.quicksearch.js')}}"></script>
<script type="text/javascript">
    $(function () {
        $('input#busqueda').quicksearch('table tbody tr',{
            'noResults':  '#noResults'
        });
        
        
    });
</script>
<div class="">    
    <input class="form-control" type="text"  placeholder="Buscar" id="busqueda">
</div>
<br/>
<div class="contenedorTabla">
    <table class="table table-striped table-bordered table-condensed">
        <tr id="noResults"><td>No hay resultados</td></tr>
    {% for activity in listaActividades %}
        <tr id="{{ activity.nombre }}">
            <td>{{ activity.nombre }}</td>
            <td class="col-md-1"><a href="{{ path('editar_actividad', { 'idActividad' : activity.id}) }}" title="Editar" class="editar btn btn-small"><span class="glyphicon glyphicon-pencil"></span></a></td>
            <td class="col-md-1"><a href="{{ path('eliminar_actividad', { 'idActividad' : activity.id}) }}" title="Eliminar" class="eliminar btn btn-small"><span class="glyphicon glyphicon-remove"></span></a></td>
        </tr>
    {% endfor %}
    </table>
</div>
<div id="null"></div>
{% block javascrips %}
<script type="text/javascript">
    $(document).ready(function() {
        $('a.eliminar').click(function(event){
            event.preventDefault(); //cancela el comportamiento por defecto
            $('#null').load($(this).attr('href'));
            $('#lista-actividades').load('{{ path('lista_actividad') }}');
        });
        
        $('#busqueda').keyup(function(event){
            
        });
    }
</script>
{% endblock %}

