{% extends "::base.html.twig" %}
{% block title %}Login Especialista {% endblock %}
{% block body %}  
            {% if error %}
                <div>{{ error.message }}</div>
            {% endif %}

            <form action="{{ path('login_check') }}" method="post" role="form" class="form-horizontal">
                <div class="form-group">
                    <label for="username" class="col-sm-2 control-label">Usuario:</label>
                    <div class="col-sm-10 col-xs-4">
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="col-sm-2 control-label">Contraseña:</label>
                    <div class="col-sm-10 col-xs-4">
                        <input type="password" id="password" name="_password" class="form-control"/>
                    </div>
                </div>
                <input type="hidden" name="_target_path" value="/especialista/perfil" />
                {#
                    Si deseas controlar la URL a la que rediriges al
                    usuario en caso de éxito (más detalles abajo)
                    <input type="hidden" name="_target_path" value="/account" />
                #}
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Acceder</button>
                </div>
                <div class="estilo">
                    <a href="{{path('alta_especialista')}}">¿Eres nuevo? Registrate</a>
                </div>
        </form>
{% endblock %}