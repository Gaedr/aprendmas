<script type="text/javascript" src="{{asset('js/jquery.quicksearch.js')}}"></script>
<script type="text/javascript">
    $(function () {
        $('input#busqueda').quicksearch('table tbody tr',{
            'noResults':  '#noResults'
        });
        
        
    });
</script>

<div class="">
    <form>
        <input class="form-control" type="text"  placeholder="Buscar" id="busqueda">
    </form>
</div>
<br/>
<div class="contenedorTabla" style="max-height: 380px; overflow-y: scroll;">
    <table class="table table-striped table-bordered table-condensed">
        <tr id="noResults"><td>No hay resultados</td></tr>
    {% for concept in listaConceptos %}
        <tr id="{{ concept.nombre }}">
            <td>{{ concept.nombre }}</td>
            <td class="col-md-1"><a href="{{ path('editar_concepto', { 'idConcepto' : concept.id}) }}" title="Editar" class="editar btn btn-small"><span class="glyphicon glyphicon-pencil"></span></a></td>
            <td class="col-md-1"><a href="{{ path('eliminar_concepto', { 'idConcepto' : concept.id}) }}" title="Eliminar" class="eliminar btn btn-small"><span class="glyphicon glyphicon-remove"></span></a></td>
        </tr>
    {% endfor %}
        
    </table>
</div>
